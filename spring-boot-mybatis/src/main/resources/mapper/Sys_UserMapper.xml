<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 此处与接口类地址对应 -->
<mapper namespace="com.spring.boot.example.springbootmybatis.mapper.Sys_UserMapper">
    <!-- 此处与接口方法名对应 指定参数类型与返回结果类型-->
    <select id="getSys_UserById" parameterType="java.lang.String" resultType="com.spring.boot.example.springbootmybatis.dao.Sys_User">
        select * from sys_user where id = #{id}
    </select>
</mapper>